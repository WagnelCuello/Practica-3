@model IEnumerable<DAL.Cliente>

@{
    ViewBag.Title = "Clientes";
}

<h2>Clientes</h2>

<div class="row">
    <div class="col-sm-2">
        <a href="/Clientes/Create" style="margin-bottom: 10px" class="btn btn-success">Nuevo</a>
    </div>
    <div>
        <input type="text" name="search" placeholder="Busqueda..." class="form-control" id="input_search" />
    </div>
</div>

<div class="container">
    <table class="table table-bordered">
        <thead class="bg-success">
            <tr>
                <th>
                    @Html.DisplayName("Imagen")
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nombres)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Apellidos)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Direccion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telefono)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Movil)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody id="table_body">
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    <img src="~/images/@item.ImageUrl" alt="Imagen" width="90" height="90" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombres)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apellidos)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Direccion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefono)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Movil)
                </td>
                <td>
                    <a href="/Clientes/Edit/?id=@item.IdCliente" class="btn btn-primary">Editar</a>
                    <a href="/Clientes/Details/?id=@item.IdCliente" class="btn btn-success">Detalles</a>
                    <a href="/Clientes/Delete/?id=@item.IdCliente" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            $("#input_search").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#table_body tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
                });
            });
        });
    </script>
    }